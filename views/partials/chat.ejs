<div id="chatWindow" class="neu-float-panel closed">
    <div id="chatHeader" class="gradient">
        Chat
        <span id="close-chat" aria-hidden="true">&times</span>
    </div>
    <div id="chatBody">
        <div id="chatContent">
			<div id="chat-hint">
				New messages will appear here.<br>
				Press <i>Enter</i> to send your message.<br>
				Press <i>Shift+Enter</i> for a new line.<br>
			</div>
        </div>

        <div id="chatInputContainer">
            <div id="notificationbox" placeholder=""></div>
            <textarea id="chatInput" class="neu-input" placeholder="Join the conversation..."></textarea>
        </div>
    </div>
</div>
