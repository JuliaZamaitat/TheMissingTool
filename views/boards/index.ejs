<body>
<div id="overlay"></div>

<div class="input-group mt-4">
	<input class="mr-2" id="board-name" type="text" style="width:<%= board.name.length/1.3 %>rem" value="<%= board.name %>">
	<input class="mt-3" id="user-name" type="text" style="width:<%= username.length * 1.3 %>rem" value="<%= username %>"> <!--change to username length -->
</div>

<!-- Left toolbar -->
<div id="toolbar">
    <button type="button" class="btn btn-primary toolbar-btn" style="background-color: #8b00ff; border-color: #8b00ff" id="plus">
        <i class="fa fa-square" aria-hidden="true"></i><span>Square</span>
    </button>
    <button type="button" class="btn btn-primary toolbar-btn" style="background-color: #8993ff ; border-color: #8993ff" id="plus-rectangle">
        <i class="fa fa-square" aria-hidden="true"></i><span>Rectangle</span>
    </button>
    <button type="button" class="btn btn-primary toolbar-btn" style="background-color: #bf004c; border-color: #bf004c" id="plus-circle">
        <i class="fa fa-circle" aria-hidden="true"></i><span>Circle</span>
    </button>
    <button type="button" class="btn btn-primary toolbar-btn" style="background-color: #3ab369; border-color: #3ab369" id="plus-oval">
        <i class="fa fa-circle" aria-hidden="true"></i><span>Oval</span>
    </button>
    <button type="button" class="btn btn-primary toolbar-btn" style="background-color: #77a114; border-color: #77a114" id="plus-triangle">
        <i class="fa fa-caret-up fa-lg" aria-hidden="true"></i><span>Triangle</span>
    </button>
</div>

<!-- Top menubar -->
<div class="notifier"><span>Copied to clipboard</span></div>
<div id="menubar">
    <span id="hamburger-bars"><i class="fa fa-bars"></i></span>
    <button type="button" class="btn btn-outline-success menu-btn" id="create-board">
        <i class="fa fa-file"></i>
    </button>
    <button type="button" class="btn btn-outline-primary menu-btn" id="share-board">
        <i class="fa fa-share-alt"></i>
    </button>
    <button type="button" class="btn btn-outline-danger menu-btn" data-toggle="modal" data-target="#deleteBoardModal">
        <i class="fa fa-trash"></i>
    </button>
    <button type="button" class="btn btn-outline-warning menu-btn" id="export-board">
        <i class="fa fa-cloud-download"></i>
    </button>
</div>

  <!-- Modal -->
  <div class="modal fade" id="deleteBoardModal" tabindex="-1" role="dialog" aria-labelledby="deleteBoardModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this board?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times</span>
          </button>
        </div>
        <div class="modal-body">
          All the cards on the board will be lost.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger" id="delete-board">Delete</button>
        </div>
      </div>
    </div>
  </div>

<!-- Chat window -->
<%- include('../partials/chat') %>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/script/client_sockets.js"></script>
<script type="text/javascript" src="/script/board.js"></script>
<script type="text/javascript" src="/script/chat.js"></script>
</body>
