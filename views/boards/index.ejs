<body>
<div id="overlay"></div>


<div id="board-input" class="flex-container">
    <div id="board-names_container">
        <div class="neu-panel neu-input" id="board-name_input"><p class="neu-title" contenteditable="true" id="board-name"><%= board.name %></p><i id="folder" class="fa fa-angle-down fa-lg glow" aria-hidden="true"></i></div>
        <div id="dropdown-content" class="neu-float-panel"></div>
    </div>
    <div class="neu-panel neu-outline neu-input"><p class="neu-title" contenteditable="true" id="user-name"><%= username %></p></div>
    <div class="users"></div>
</div>



<!-- Left toolbar -->
<div id="toolbar" class="neu-panel">
    <button type="button" class="neu-button toolbar-btn create-card-btn" id="SQUARE">
        <img src="/icons/square.webp"><span>Square</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button toolbar-btn create-card-btn" id="RECTANGLE">
        <img src="/icons/rectangle.webp"><span>Rectangle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button toolbar-btn create-card-btn" id="CIRCLE">
        <img src="/icons/circle.webp"><span>Circle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button toolbar-btn create-card-btn" id="ELLIPSE">
        <img src="/icons/oval.webp"><span>Ellipse</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button toolbar-btn create-card-btn" id="TRIANGLE">
        <img src="/icons/triangle.webp"><span>Triangle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button toolbar-btn add-text-btn">
        <img src="/icons/text.webp"><span>Text</span>
    </button>
    <button type="button" class="neu-button toolbar-btn add-image-btn">
        <img src="/icons/image.webp"><span>Image</span>
    </button>
    <button type="button" class="neu-button toolbar-btn add-connection-btn">
        <img src="/icons/arrow.webp"><span>Connect</span>
    </button>
    <button type="button" class="neu-button toolbar-btn draw-btn">
        <img src="/icons/pencil.webp"><span>Draw</span>
    </button>
</div>

<!-- Top menubar -->
<div class="notifier"><span>Copied to clipboard</span></div>
<div id="menubar" class="neu-color-panel">
    <img id="hamburger-bars" src="/icons/hamburger.webp">
    <button type="button" class="menu-btn" id="create-board">
        <img src="/icons/plus.webp"><span>New Board</span>
    </button>
    <button type="button" class="menu-btn" id="share-board">
        <img src="/icons/share.webp"><span>Share Board</span>
    </button>
    <button type="button" class="menu-btn" data-toggle="modal"
            data-target="#deleteBoardModal">
            <img src="/icons/trash-can.webp"><span>Delete Board</span>
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteBoardModal" tabindex="-1" role="dialog" aria-labelledby="deleteBoardModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this board?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
            </div>
            <div class="modal-body">
                All the cards on the board will be lost.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="delete-board">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Chat window -->
<%- include('../partials/chat') %>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/script/client_sockets.js"></script>
<script type="text/javascript" src="/script/board.js"></script>
<script type="text/javascript" src="/script/chat.js"></script>
</body>
