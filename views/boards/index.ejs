<body>
<div id="zoom-container">
    <div id="overlay"></div>
</div>
<div id="board-input" class="flex-container">
    <div id="board-names_container">
        <div class="neu-panel neu-edit-panel" id="board-name_input"><p class="neu-title" contenteditable="true"
                                                                       id="board-name"><%= board.name %></p><i
                    id="folder" class="fa fa-angle-down fa-lg glow" aria-hidden="true"></i></div>
        <div id="dropdown-content" class="neu-float-panel"></div>
    </div>
    <div id="username_container" class="neu-panel neu-outline neu-edit-panel"><p class="neu-title" contenteditable="true" id="user-name"><%= username %></p>
    </div>
    <div id="users"></div>
    <div id="board_path"></div>
</div>

<img id="back-button" src="/icons/back.svg">

<!-- Left toolbar -->
<div id="toolbar" class="neu-panel">
    <button type="button" class="neu-button gradient toolbar-btn create-card-btn" id="SQUARE">
        <img src="/icons/square.svg"><span>Square</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn create-card-btn" id="RECTANGLE">
        <img src="/icons/rectangle.svg"><span>Rectangle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn create-card-btn" id="CIRCLE">
        <img src="/icons/circle.svg"><span>Circle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn create-card-btn" id="ELLIPSE">
        <img src="/icons/oval.svg"><span>Ellipse</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn create-card-btn" id="TRIANGLE">
        <img src="/icons/triangle.svg"><span>Triangle</span>
        <div class="color-options"></div>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn add-text-btn">
        <img src="/icons/text.svg"><span>Text</span>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn add-image-btn">
        <img src="/icons/image.svg"><span>Image</span>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn add-connection-btn">
        <img src="/icons/arrow.svg"><span>Connect</span>
    </button>
    <button type="button" class="neu-button gradient toolbar-btn draw-btn">
        <img src="/icons/pencil.svg"><span>Draw</span>
    </button>
</div>

<div id="zoom-btn_container" class="neu-panel flex-container">
    <button id="zoom-out" class="zoom-btn neu-title neu-link">&mdash;</button>
    <input type="range" min="1" max="200" step="1" value="100" id="zoom-slider">
    <button id="zoom-in" class="zoom-btn neu-title neu-link">&plus;</button>
    <p id="zoom-size" class="neu-title">100%</p>
</div>

<!-- Top menubar -->
<div class="notifier"><span>Copied to clipboard</span></div>
<div id="menubar" class="neu-panel gradient">
    <img id="hamburger-bars" src="/icons/hamburger.svg">
    <button type="button" class="menu-btn" id="create-child-board">
        <img src="/icons/plus.svg"><span>New Board</span>
    </button>
    <button type="button" class="menu-btn" id="share-board">
        <img src="/icons/share.svg"><span>Share Board</span>
    </button>
    <button type="button" class="menu-btn" data-toggle="modal"
            data-target="#deleteBoardModal">
        <img src="/icons/trash-can.svg"><span>Delete Board</span>
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteBoardModal" tabindex="-1" role="dialog" aria-labelledby="deleteBoardModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header gradient">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this card?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
            </div>
            <div class="modal-body">
                All the cards on the board will be lost.
            </div>
            <div class="modal-footer">
                <button type="button" class="neu-button plain" data-dismiss="modal">Close</button>
                <button type="button" class="neu-button gradient" id="delete-board">Delete</button>
            </div>
        </div>
    </div>
</div>

<% if(!board.name) { %>
    <div class="modal fade" id="setNameModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header gradient">
                    <h5 class="modal-title" id="setNameModalLabel">Please enter a name for the new board.</h5>
                </div>
                <form id="board-name-form">
                    <div class="modal-body">
                        <div class="form-group">
                            <h5><label class="neu-title" for="board-name-input">Board name:</label></h5><br>
                            <input type="text" class="neu-input" id="board-name-input" placeholder="Type a name..."
                                   maxlength="200">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="neu-button gradient" id="board-name-button">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %>

<!-- Chat window -->
<button type="button" id="open-chat" class="neu-button gradient">
    <div id="messageCount" class="neu-float-panel"></div>
    <img src="/icons/chat.svg">
</button>
<%- include('../partials/chat') %>
<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/script/common.js"></script>
<script type="text/javascript" src="/script/colors.js"></script>
<script type="text/javascript" src="/script/comments.js"></script>
<script type="text/javascript" src="/script/cards.js"></script>
<script type="text/javascript" src="/script/communication.js"></script>
<script type="text/javascript" src="/script/board.js"></script>
</body>
